<header class="navbar navbar-fixed-top navbar-inverse">
 <div class="navbar-inner">
  <div class="container">
  <%= link_to "Interactive", root_path, id: "logo" %>
   <nav>
   <ul class="nav pull-right">
   <% case yield(:title)%>
   <%when 'About' %>
    <li><%= link_to "Home", home_path %></li>
   <%when 'Home'%>
    <li><%= link_to "About", about_path %></li>
   <%else%>
    <li><%= link_to "Home",    home_path %></li>
   <%end%>


	<% if signed_in? %>
	<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
	<%if yield(:title)!="Edit Profile" and yield(:title)!="Edit Sign In"%>
     <li id="fat-menu" class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
       Account <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
		<%if !current_user.profile%>
		 <li><%= link_to "Create your profile", cprofile_path%></li>
		<%else%>
		 <li><%= link_to "Profile", user_path(current_user)%></li>
		 <li><%= link_to "Edit Profile", edit_profile_path(current_user)%></li>
		<%end%>
		<li><%= link_to "Change password", edit_user_path(current_user)%></li>
       </ul>
      </li>
     <%end%>
      <% else %>
       <li><%= link_to "Sign in", signin_path %></li>
     <% end %>
   </ul>
  </nav>
  </div>
 </div>
</header>

